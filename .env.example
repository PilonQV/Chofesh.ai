# =============================================================================
# Chofesh AI Gateway - Environment Configuration Template
# =============================================================================
# Open Source Multi-Provider AI Infrastructure
# Copy this file to .env and fill in your values
# All values are optional unless marked as REQUIRED
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# REQUIRED: Application URL (used for redirects, emails, etc.)
VITE_APP_URL=http://localhost:3000

# Application port (default: 3000)
PORT=3000

# Environment mode
NODE_ENV=development

# -----------------------------------------------------------------------------
# DATABASE (REQUIRED)
# -----------------------------------------------------------------------------
# PostgreSQL or MySQL connection string
# PostgreSQL example: postgresql://user:password@localhost:5432/chofesh
# MySQL example: mysql://user:password@localhost:3306/chofesh
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chofesh

# Redis URL for caching (optional but recommended)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AUTHENTICATION (REQUIRED)
# -----------------------------------------------------------------------------
# JWT secret for session signing (generate with: openssl rand -base64 32)
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-encryption-key-here

# Owner/admin email (set after first login)
OWNER_EMAIL=admin@localhost

# Site configuration
SITE_NAME=AI Gateway
FROM_EMAIL=noreply@localhost
SUPPORT_EMAIL=support@localhost

# -----------------------------------------------------------------------------
# AI PROVIDERS (Bring Your Own Key - at least one required)
# -----------------------------------------------------------------------------
# Groq (recommended for free tier - get key at https://console.groq.com)
GROQ_API_KEY=groq_xxx

# OpenRouter (access to 100+ models - get key at https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-xxx

# OpenAI (GPT models)
OPENAI_API_KEY=sk-xxx

# Anthropic (Claude models)
ANTHROPIC_API_KEY=sk-ant-xxx

# Google AI (Gemini models)
GOOGLE_AI_API_KEY=AIzaxxx

# Cerebras (fast inference)
CEREBRAS_API_KEY=csb_xxx

# Kimi/Moonshot (long context)
KIMI_API_KEY=sk-xxx

# xAI/Grok
GROK_API_KEY=xai-xxx

# Cloudflare Workers AI
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_WORKERS_TOKEN=your_token

# -----------------------------------------------------------------------------
# IMAGE GENERATION
# -----------------------------------------------------------------------------
# Runware (image generation - get key at https://runware.ai)
RUNWARE_API_KEY=rw_xxx

# -----------------------------------------------------------------------------
# WEB SEARCH (optional)
# -----------------------------------------------------------------------------
# Brave Search API
BRAVE_SEARCH_API_KEY=xxx

# Serper (Google Search API)
SERPER_API_KEY=xxx

# SearXNG instance URL (self-hosted, no API key needed)
SEARXNG_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# EMAIL SERVICE (optional - required for email verification)
# -----------------------------------------------------------------------------
# Resend (get key at https://resend.com)
RESEND_API_KEY=re_xxx

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (optional)
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx

# GitHub OAuth
GITHUB_CLIENT_ID=Iv1.xxx
GITHUB_CLIENT_SECRET=xxx

# GitLab OAuth
GITLAB_CLIENT_ID=xxx
GITLAB_CLIENT_SECRET=xxx

# -----------------------------------------------------------------------------
# PAYMENTS - STRIPE (optional)
# -----------------------------------------------------------------------------
# Stripe test mode keys (use for development)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe live mode keys (use for production)
# STRIPE_SECRET_LIVE_KEY=sk_live_xxx
# STRIPE_WEBHOOK_SECRET_LIVE=whsec_xxx

# Stripe product price IDs (create in Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_UNLIMITED_PRICE_ID=price_xxx

# -----------------------------------------------------------------------------
# CODE EXECUTION (optional)
# -----------------------------------------------------------------------------
# Judge0 (self-hosted or RapidAPI)
JUDGE0_API_URL=http://localhost:2358
# Or use RapidAPI
RAPIDAPI_KEY=xxx

# Piston API (alternative code execution)
PISTON_API_URL=https://emkc.org/api/v2/piston

# -----------------------------------------------------------------------------
# ANALYTICS (optional - disabled by default for privacy)
# -----------------------------------------------------------------------------
# These are disabled in the open-source version for true BYOK/privacy-first
# Enable only if you want to track usage analytics
ENABLE_ANALYTICS=false
ENABLE_AUDIT_LOGS=false

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
# Max requests per minute per user
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# Trusted proxy count (set to 1 if behind a single proxy like Cloudflare)
TRUSTED_PROXIES=1

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------
# These settings should NOT be used in production
# Enable detailed error messages
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info